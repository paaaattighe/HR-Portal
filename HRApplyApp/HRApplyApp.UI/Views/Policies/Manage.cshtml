@model List<HrApplyApp.Models.Policy>

@{
    ViewBag.Title = "Manage";
}

<h2>View Policies</h2>


    <h4>All Policies</h4>
    @foreach (var pol in Model)
    {
        <p>@pol.PolicyName</p>
        <p>@pol.PolicyDescription</p>
        <p>@Html.ActionLink("Edit", "Edit", "Policies", new {id = @pol.PolicyID}, null)</p>

        using (Html.BeginForm("Delete", "Policies", FormMethod.Post))
        {
            @Html.Hidden("id", pol.PolicyID)
             //<input type="hidden" name="PolicyID" id="PolicyID" value="@pol.PolicyID"/>
             <button>Delete</button>
         }
    }
<p>@Html.ActionLink("Add", "Add", "Policies")</p>

 @section Admin {
     <div class="navbar-collapse collapse">
         <ul class="nav navbar-nav navbar-right">
             @Html.ActionLink("HR Apply App", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})

             <li class="dropdown-toggle" id="dropdownMenu1" data-toggle="dropdown">
                 <a href="#">Policies<span class="caret"></span></a>
             </li>
             <ul class="dropdown-menu">
                 <li>@Html.ActionLink("View Policies", "Index", "Policies")</li>
                 <li>@Html.ActionLink("Manage Policies", "Manage", "Policies")</li>
                 <li>@Html.ActionLink("Manage Categories", "Admin", "Home")</li>
             </ul>
             <li>@Html.ActionLink("Admin", "Admin", "Home", new {area = ""}, null)</li>
         </ul>
     </div>

 }
