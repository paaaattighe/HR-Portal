@model HRApplyApp.UI.Models.PoliciesByCategoryVM

@{
    ViewBag.Title = "PoliciesByCategory";
}

<h2>Policies under Category @Model.Category</h2>

@foreach (var pol in Model.Policies)
{
    <p>Policy Name : @pol.PolicyName</p>
    <p>Policy Description : @pol.PolicyDescription</p>
    <p>Policy Category : @pol.Category</p>
}


