@model HRApplyApp.UI.Models.PoliciesByCategoryVM

@{
    ViewBag.Title = "Index";
}

<h2>View Policies</h2>
<br/>

@foreach (var pol in Model.AllPolicies.ToList())
{
    <p>Name : @pol.PolicyName</p>
    <p>Description : @pol.PolicyDescription</p>
    <p>Category : @pol.Category</p>
    <hr/>
}

<h2>View policies by category:</h2>
<br />
<div class="row">
    @*drop down here*@
    @using (Html.BeginForm("PoliciesByCategory", "Policies", FormMethod.Post))
    {
        @Html.DropDownListFor(m => m.Category, new SelectList(Model.Polcatlist, "PolicyCategoryName", "PolicyCategoryName"), "Select a category")
        <button class="btn btn-danger">View policies</button>
    }
</div>

@section Admin {
    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("HR Apply App", "Index", "Home", new { area = "" })</li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Policies <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink("View Policies", "Index", "Policies")</li>
                    <li>@Html.ActionLink("Manage Policies", "Manage", "Policies")</li>
                    <li>@Html.ActionLink("Manage Categories", "ManageCategory", "Policies")</li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Time Tracking <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink("Submit Time", "Index", "Time")</li>
                    <li>@Html.ActionLink("View Timesheet", "TimeSheet", "Time")</li>
                </ul>
            </li>
            <li>@Html.ActionLink("Admin", "Admin", "Home", new { area = "" }, null)</li>
        </ul>
    </div>

}