@model HRApplyApp.UI.Models.PoliciesByCategoryVM

@{
    ViewBag.Title = "Index";
}

<h2>View Policies</h2>

@foreach (var pol in Model.AllPolicies.ToList())
{
    <p>Name : @pol.PolicyName</p>
    <p>Description : @pol.PolicyDescription</p>
    <p>Category : @pol.Category</p>
}

<h2>View policies by category:</h2>
@*drop down here*@
<div class="dropdown">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        Categories
        <span class="caret"></span>
    </button>
    @*<ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
        @foreach ()
        <li><a href="#">Action</a></li>
    </ul>*@
</div>

@section Admin {
    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
            @Html.ActionLink("HR Apply App", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            <li class="dropdown-toggle" id="dropdownMenu1" data-toggle="dropdown">
                <a href="#">Policies<span class="caret"></span></a>
            </li>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("View Policies", "Index", "Policies")</li>
                <li>@Html.ActionLink("Manage Policies", "Manage", "Policies")</li>
                <li>@Html.ActionLink("Manage Categories", "Admin", "Home")</li>
            </ul>
            <li>@Html.ActionLink("Admin", "Admin", "Home", new { area = "" }, null)</li>
        </ul>
    </div>
}