<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/Home/Home" class="navbar-brand"> <img alt="The Software Guild" src="http://softwareguild.wpengine.com/wp-content/uploads/swg_logo-white.png" width="250" /></a>
                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    @Html.ActionLink("HR Apply App", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

                    <li class="dropdown-toggle" id="dropdownMenu1" data-toggle="dropdown"><a href="#">Policies<span class="caret"></span></a>                        
                    </li>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("View Policies", "Index", "Policies")</li>
                        <li>@Html.ActionLink("Manage Policies", "Admin", "Home")</li>
                        <li>@Html.ActionLink("Manage Categories", "Admin", "Home")</li>
                    </ul>
                    <li>@Html.ActionLink("Admin", "Admin", "Home", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>
