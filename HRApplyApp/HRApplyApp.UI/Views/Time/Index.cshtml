@model HRApplyApp.UI.Models.TimeVM

@{
    ViewBag.Title = "Index";
}

<h2>Time Management</h2>

@using (Html.BeginForm("SubmitTime", "Time", FormMethod.Post))
{
<div class="row">
    <div class="form-group">
        <label>Select Employee : </label>
        <select class="form-group" title="Select an Employee" id="employeeDropdown">
            @foreach (var edd in Model.Employees)
            {
                <option value="@edd.Value">@edd.Text</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Day Worked</label>
        <input id="theDate" type="text"/>
    </div>
    <div class="form-group">
        <label>Hours Worked</label>
        <input id="hoursWorkedInputField" type="number"/>
    </div>
    <button class="btn btn-primary">Submit</button>
</div>
}

@section Admin {
    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("HR Apply App", "Index", "Home", new { area = "" })</li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Policies <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink("View Policies", "Index", "Policies")</li>
                    <li>@Html.ActionLink("Manage Policies", "Manage", "Policies")</li>
                    <li>@Html.ActionLink("Manage Categories", "ManageCategory", "Policies")</li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Time Tracking <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink("Submit Time", "Index", "Time")</li>
                    <li class="disabled">@Html.ActionLink("View Timesheet", "Index", "Time")</li>
                </ul>
            </li>
            <li>@Html.ActionLink("Admin", "Admin", "Home", new { area = "" }, null)</li>
        </ul>
    </div>

}

@section Scripts{
    <script src="/Scripts/jquery-ui-1.10.2.min.js"></script>
    <script src="/Scripts/app/datePicker.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
}